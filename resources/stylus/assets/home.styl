/* Specific styling starts here */

nav {
	position: fixed;
	z-index: 999;
}

nav, footer {
	background-color: rgba(3, 155, 229, 0.8)!important;
}

#content {
	padding-top: 64px;
}

section.hero {
	background-image: url("/wp-content/themes/virtual-cycling-club/images/hero.jpg");
	background-size: cover;
	height: 600px;
	height: 60vh;
	padding-top: 50px;
}

section.hero .focus {
	background: #ff9966;  /* fallback for old browsers */
	background: -webkit-linear-gradient(to right, rgba(255, 94, 98, 0.75), rgba(255, 153, 102, 0.75));  /* Chrome 10-25, Safari 5.1-6 */
	background: linear-gradient(to right, rgba(255, 94, 98, 0.75), rgba(255, 153, 102, 0.75)); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	background: rgba(0,0,0,0.75);
	border-radius: 5px;
	color: #fff;
	height: 300px;
	width: 80%;
	margin: 0 auto;
	position: relative;
	top: 20%;
	top: calc(50% - 150px);
	padding: 2.5%;
}

.welcome {
	border-right: 1px solid #fff;
    height: 100%;
}

.process {
	padding: 50px 0;
	text-align: center;
}

.process .material-icons {
	padding: 15px;
    border: 1px solid #444;
    border-radius: 5em;
    font-size: 5em;
    margin: 0 .5em;
}